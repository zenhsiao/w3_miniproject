<h1>Book List</h1>


<ul>
   <% @books.each do |book| %>
	<li>
	<%=	book.name        %>
	<%=	book.description %>
	<%=	book.isbn       %>
	<%=	link_to "show", book_path(book)      %>
    <%=	link_to "edit", edit_book_path(book)      %>
	<%=	link_to "delete", book_path(book), :method => 'delete'     %>

	</li>
<%	end  %>
</ul>

<%=	link_to "New Book", new_book_path    %>